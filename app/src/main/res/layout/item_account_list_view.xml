<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/item_account_list_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="ID : ASDF" />

    <TextView
        android:id="@+id/item_account_list_view_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SITE : www.test.com" />

    <TextView
        android:id="@+id/item_account_list_view_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LastUpdated : 2023-08-27" />

</LinearLayout>